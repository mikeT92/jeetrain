<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="defaultPersistenceUnit" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/JEETRAIN-DATASOURCE</jta-data-source>
		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>edu.hm.cs.fwp.jeetrain.business.users.model.User</class>
		<class>edu.hm.cs.fwp.jeetrain.business.users.model.Role</class>
		<class>edu.hm.cs.fwp.jeetrain.business.tasks.model.Task</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.logging.level" value="INFO"/>
		</properties>
	</persistence-unit>
</persistence>
